###############################################################################
#              ENVIRONMENT VARIABLES FOR DOCKER COMPOSE
#
# Notes:
#
#   - Suggested values have been pre-populated. Do NOT remove empty values!
#   - All other values can be generated by running the configuration script
#   - Run `bash ./configure.sh --help` to view all options available
#   - The configuration script will copy tokens/passwords/keys to the
#     appropriate location to work with docker secrets
#
###############################################################################

# Global Settings

TZ=America/Los_Angeles
APPDATA_LOCATION=/srv/appdata
DOCKER_NETWORK=proxy
CERT_ACME_EMAIL=

# Tailscale Settings

TAILSCALE_API_KEY=
TAILSCALE_IP=

# Cloudflare Settings

CF_DNS_API_TOKEN=
CF_DOMAIN_NAME=
CF_DOMAIN_CN=
CF_TUNNEL_NAME=self-host
CF_TUNNEL_ID=

# SMTP Server Settings

SMTP2GO_API_KEY=
SMTP2GO_DOMAIN_VALIDATED=
SMTP_SENDER=
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_SERVER=
SMTP_PORT=
SMTP_SECURE=

# Authelia Settings

AUTHELIA_THEME=dark

# LLDAP Settings

LLDAP_ADMIN_PASSWORD=

# Portainer Settings

PORTAINER_ADMIN_PASSWORD=

# SSO Settings

OIDC_IMMICH_CLIENT_ID=
OIDC_GRAFANA_CLIENT_ID=
OIDC_NEXTCLOUD_CLIENT_ID=

# Immich Settings

IMMICH_VERSION=release
IMMICH_SUBDOMAIN=immich
IMMICH_UPLOAD_LOCATION=/usr/local/immich
IMMICH_DEFAULT_QUOTA=100
IMMICH_API_KEY=

# Nextcloud Settings

NEXTCLOUD_VERSION=production
NEXTCLOUD_SUBDOMAIN=nextcloud
NEXTCLOUD_DATA_LOCATION=/usr/local/nextcloud
NEXTCLOUD_TRUSTED_PROXIES=