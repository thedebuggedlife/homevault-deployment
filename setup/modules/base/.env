###############################################################################
#              ENVIRONMENT VARIABLES FOR DOCKER COMPOSE
#
# Notes:
#
#   - Suggested values have been pre-populated. Do NOT remove empty values!
#   - All other values can be generated by running the configuration script
#   - Run `bash ./configure.sh --help` to view all options available
#   - The configuration script will copy tokens/passwords/keys to the
#     appropriate location to work with docker secrets
#
###############################################################################

# Global Settings

TZ=America/Los_Angeles
APPDATA_LOCATION=/srv/appdata
ADMIN_EMAIL=
INSTALLER_UID=
DOCKER_GID=
RESTART_POLICY=unless-stopped

# Tailscale Settings

TAILSCALE_API_KEY=
TAILSCALE_IP=

# Cloudflare Settings

CF_DNS_API_TOKEN=
CF_DOMAIN_NAME=
CF_DOMAIN_CN=
CF_TUNNEL_NAME=self-host
CF_TUNNEL_ID=

# SMTP Server Settings

USE_SMTP2GO=
SMTP2GO_API_KEY=
SMTP2GO_DOMAIN_VALIDATED=
SMTP_SENDER=noreply
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_SERVER=
SMTP_PORT=
SMTP_SECURE=

# Authelia Settings

AUTHELIA_THEME=dark

# SSO Settings

OIDC_GRAFANA_CLIENT_ID=

# Backup Settings

BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_ENABLE_FORGET=true
BACKUP_RETENTION_POLICY=7d4w6m
BACKUP_STOP_SERVICES=